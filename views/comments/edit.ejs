<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Editing comment</h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/campgrounds/<%= campground_id%>/comments/<%= comment._id%>?_method=PUT" method="POST">  <!--PUT method using  campground_id and comment._id-->>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-ls btn-default btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Back to campground</a>
        </div>
    </div>
</div>

